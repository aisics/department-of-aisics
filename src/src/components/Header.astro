---
import LanguageSelector from './LanguageSelector.astro';
import { getTranslation } from '../utils/i18n';

// Get language from cookies or default to Ukrainian
const lang = Astro.cookies.get('language')?.value || 'uk';
const t = (key: string) => getTranslation(lang, key);
---

<header class="sticky top-0 z-50 bg-white border-b border-gray-200">
  <div class="px-4 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-blue-600 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-xl font-bold text-gray-900">
            {t('site.title')}
          </h1>
        </div>
      </a>
      
      
      <!-- Actions -->
      <div class="flex items-center space-x-3">
        <!-- Language Selector -->
        <div class="hidden lg:block">
          <LanguageSelector />
        </div>
        
        <!-- About Icon -->
        <a 
          href="/about" 
          class="hidden lg:flex items-center justify-center w-10 h-10 text-gray-600 hover:text-gray-900 rounded-lg hover:bg-gray-50 transition-all"
          aria-label="About"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </a>
        
        <!-- GitHub Icon -->
        <a 
          href="https://github.com/aisics/department-of-aisics" 
          target="_blank"
          class="hidden lg:flex items-center justify-center w-10 h-10 text-gray-600 hover:text-gray-900 rounded-lg hover:bg-gray-50 transition-all"
          aria-label="View on GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
          </svg>
        </a>
        
        <!-- Mobile Menu Button -->
        <button onclick="toggleMobileMenu()" class="lg:hidden p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-lg transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden border-t border-gray-200 bg-white">
    <div class="px-4 py-4">
      <nav class="space-y-1">
        <a href="/" class="block px-3 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors font-medium">
          {lang === 'uk' ? 'Ð“Ð¾Ð»Ð¾Ð²Ð½Ð°' : 'Home'}
        </a>
        <a href="/about" class="block px-3 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors font-medium">
          {t('about.title')}
        </a>
        
        <div class="pt-3 border-t border-gray-200">
          <div class="px-3 py-2">
            <p class="text-sm text-gray-500 mb-2">{lang === 'uk' ? 'ÐœÐ¾Ð²Ð°' : 'Language'}</p>
            <div class="flex space-x-2">
              <button onclick="setLanguage('uk')" class={`px-3 py-1.5 text-sm rounded-lg transition-colors ${lang === 'uk' ? 'bg-purple-100 text-purple-700' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}>
                ðŸ‡ºðŸ‡¦ UA
              </button>
              <button onclick="setLanguage('en')" class={`px-3 py-1.5 text-sm rounded-lg transition-colors ${lang === 'en' ? 'bg-purple-100 text-purple-700' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}>
                ðŸ‡ºðŸ‡¸ EN
              </button>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    if (menu) {
      menu.classList.toggle('hidden');
    }
  }
  
  function setLanguage(newLang: string) {
    document.cookie = `language=${newLang}; path=/; max-age=31536000`;
    window.location.reload();
  }
  
  // Make functions available globally
  (window as any).toggleMobileMenu = toggleMobileMenu;
  (window as any).setLanguage = setLanguage;
</script>