---
import { loadTranslations, getLanguageFromCookie } from '../utils/i18n';
await loadTranslations();
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import { getCategories } from '../utils/articles';
import { getTranslation } from '../utils/i18n';

const lang = Astro.cookies.get('language')?.value || 'uk';
const categoriesFromRepo = getCategories();
const t = (key: string) => getTranslation(lang, key);
---

<Layout title={`${t('site.title')} - ${t('about.title')}`}>
  <Header />
  
  <div class="lg:flex">
    <Sidebar 
      categories={{}} 
      repoCategories={categoriesFromRepo} 
    />
    
    <main class="lg:flex-1">
      <!-- Hero Section -->
      <section class="relative bg-gradient-to-br from-purple-50 to-blue-50 py-16 lg:py-24">
        <div class="container mx-auto px-4 lg:px-8">
          <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
              {t('about.title')}
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed">
              Дізнайтеся більше про нашу місію та команду
            </p>
          </div>
        </div>
      </section>
      
      <!-- Content Section -->
      <section class="py-16 lg:py-24">
        <div class="container mx-auto px-4 lg:px-8">
          <div class="max-w-5xl mx-auto">
            <!-- Instructor Section -->
            <div class="mb-20">
              <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div>
                  <h2 class="text-3xl font-bold text-gray-900 mb-6">
                    {t('about.instructor.title')}
                  </h2>
                  <div class="prose prose-lg text-gray-600">
                    <p class="mb-4">
                      {t('about.instructor.description')}
                    </p>
                    <div class="mt-6">
                      <div class="flex flex-wrap gap-3">
                        <span class="inline-flex items-center px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-sm font-medium">
                          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                          </svg>
                          25+ років досвіду
                        </span>
                        <span class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
                          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm3.293 1.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L7.586 10 5.293 7.707a1 1 0 010-1.414zM11 12a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                          </svg>
                          Експерт ШІ
                        </span>
                        <span class="inline-flex items-center px-4 py-2 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          Міжнародний досвід
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="relative">
                  <div class="aspect-square bg-gradient-to-br from-purple-100 to-blue-100 rounded-2xl flex items-center justify-center">
                    <svg class="w-32 h-32 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-blue-200 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
                  <div class="absolute -top-6 -left-6 w-32 h-32 bg-purple-200 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
                </div>
              </div>
            </div>
            
            <!-- Course Section -->
            <div class="mb-20">
              <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">
                {t('about.course.title')}
              </h2>
              
              <div class="prose prose-lg text-gray-600 max-w-3xl mx-auto text-center mb-12">
                <p>{t('about.course.description')}</p>
              </div>
              
              <!-- Features Grid -->
              <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                  <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-4">
                    <svg class="w-7 h-7 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2">
                    {t('about.features.practical.title')}
                  </h3>
                  <p class="text-gray-600 text-sm">
                    {t('about.features.practical.description')}
                  </p>
                </div>
                
                <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                  <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
                    <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2">
                    {t('about.features.multilingual.title')}
                  </h3>
                  <p class="text-gray-600 text-sm">
                    {t('about.features.multilingual.description')}
                  </p>
                </div>
                
                <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                  <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mb-4">
                    <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2">
                    {t('about.features.updated.title')}
                  </h3>
                  <p class="text-gray-600 text-sm">
                    {t('about.features.updated.description')}
                  </p>
                </div>
                
                <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow">
                  <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center mb-4">
                    <svg class="w-7 h-7 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2">
                    {t('about.features.community.title')}
                  </h3>
                  <p class="text-gray-600 text-sm">
                    {t('about.features.community.description')}
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Mission Section -->
            <div class="bg-gradient-to-br from-purple-600 to-blue-600 rounded-3xl p-12 text-center text-white">
              <div class="max-w-3xl mx-auto">
                <h2 class="text-3xl font-bold mb-6">
                  {t('about.mission.title')}
                </h2>
                <p class="text-xl leading-relaxed opacity-95">
                  {t('about.mission.description')}
                </p>
                <div class="mt-8">
                  <a href="/" class="inline-flex items-center px-8 py-4 bg-white text-purple-600 font-semibold rounded-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-200">
                    Почати навчання
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>