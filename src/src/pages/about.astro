---
import { loadTranslations, getLanguageFromCookie } from '../utils/i18n';
await loadTranslations();
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import { getCategories } from '../utils/articles';
import { getTranslation } from '../utils/i18n';

const lang = Astro.cookies.get('language')?.value || 'uk';
const categoriesFromRepo = getCategories();
const t = (key: string) => getTranslation(lang, key);
---

<Layout title={`${t('site.title')} - ${t('about.title')}`}>
  <Header />
  
  <div class="lg:flex min-h-screen">
    <Sidebar 
      categories={{}} 
      repoCategories={categoriesFromRepo} 
    />
    
    <main class="lg:flex-1 relative overflow-hidden">
      <!-- About Section -->
      <section class="relative min-h-screen bg-gradient-to-br from-neural-950 via-primary-900 to-secondary-900">
        <!-- Animated Background -->
        <div class="absolute inset-0 bg-neural-pattern opacity-30"></div>
        
        <!-- Floating Elements -->
        <div class="absolute top-20 left-20 w-72 h-72 bg-gradient-to-r from-primary-500/20 to-secondary-500/20 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-gradient-to-r from-secondary-500/20 to-accent-500/20 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
        
        <!-- Grid Pattern Overlay -->
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-neural-900/5 to-neural-900/20"></div>
        
        <!-- Content -->
        <div class="relative z-10 px-4 sm:px-6 max-w-4xl mx-auto py-20">
          <!-- Title -->
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black mb-12 text-center animate-fade-in-up">
            <span class="block bg-gradient-to-r from-white via-primary-100 to-secondary-100 bg-clip-text text-transparent">
              {t('about.title')}
            </span>
          </h1>
          
          <!-- About Content -->
          <div class="bg-white/5 backdrop-blur-lg rounded-3xl p-8 md:p-12 border border-white/10 shadow-2xl animate-fade-in-up" style="animation-delay: 0.2s;">
            <!-- Instructor Section -->
            <div class="mb-12">
              <h2 class="text-2xl md:text-3xl font-bold text-white mb-6 flex items-center">
                <svg class="w-8 h-8 mr-3 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                {t('about.instructor.title')}
              </h2>
              <p class="text-lg text-neural-300 leading-relaxed mb-4">
                {t('about.instructor.description')}
              </p>
              <div class="text-neural-400">
                <p class="mb-2">{t('about.instructor.credentials')}</p>
              </div>
            </div>
            
            <!-- Course Section -->
            <div class="mb-12">
              <h2 class="text-2xl md:text-3xl font-bold text-white mb-6 flex items-center">
                <svg class="w-8 h-8 mr-3 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                {t('about.course.title')}
              </h2>
              <p class="text-lg text-neural-300 leading-relaxed mb-6">
                {t('about.course.description')}
              </p>
              
              <!-- Course Features -->
              <div class="grid md:grid-cols-2 gap-6 mt-8">
                <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10">
                  <h3 class="text-xl font-semibold text-white mb-3 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    {t('about.features.practical.title')}
                  </h3>
                  <p class="text-neural-400">
                    {t('about.features.practical.description')}
                  </p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10">
                  <h3 class="text-xl font-semibold text-white mb-3 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
                    </svg>
                    {t('about.features.multilingual.title')}
                  </h3>
                  <p class="text-neural-400">
                    {t('about.features.multilingual.description')}
                  </p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10">
                  <h3 class="text-xl font-semibold text-white mb-3 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    {t('about.features.updated.title')}
                  </h3>
                  <p class="text-neural-400">
                    {t('about.features.updated.description')}
                  </p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10">
                  <h3 class="text-xl font-semibold text-white mb-3 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    {t('about.features.community.title')}
                  </h3>
                  <p class="text-neural-400">
                    {t('about.features.community.description')}
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Mission Section -->
            <div class="bg-gradient-to-r from-primary-500/10 to-secondary-500/10 rounded-2xl p-8 border border-white/10">
              <h2 class="text-2xl md:text-3xl font-bold text-white mb-4 flex items-center">
                <svg class="w-8 h-8 mr-3 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                {t('about.mission.title')}
              </h2>
              <p class="text-lg text-neural-300 leading-relaxed">
                {t('about.mission.description')}
              </p>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>